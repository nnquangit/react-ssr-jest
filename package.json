{
  "name": "react-ssr-jest",
  "version": "1.0.0",
  "description": "Reactjs start kit integrating `reactjs`, `ssr`,`webpack 4`,`jest`,...",
  "main": "server.js",
  "scripts": {
    "start": "node server",
    "build": "rimraf public && npm run build:client",
    "build:client": "cross-env NODE_ENV=production webpack --progress --hide-modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nnquangit/react-ssr-jest.git"
  },
  "author": "nnquangit@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nnquangit/react-ssr-jest/issues"
  },
  "homepage": "https://github.com/nnquangit/react-ssr-jest#readme",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "compression-webpack-plugin": "^1.1.11",
    "cross-env": "^5.1.6",
    "express": "^4.16.3",
    "hard-source-webpack-plugin": "^0.7.5",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.0",
    "rimraf": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.3",
    "webpack-dev-middleware": "^3.1.3"
  },
  "dependencies": {
    "react": "^16.4.0",
    "react-dom": "^16.4.0"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      ".(css|scss|less)$": "<rootDir>/test/unit/__mocks__/noneMock.js"
    },
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleDirectories": [
      "node_modules"
    ],
    "transformIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
